<!-- Here are the comments!  -->




<ul>
<% @post.comments.each do |eachcomment| %>  
  <li>
    <p><%= eachcomment.content %></p>
    By <%= eachcomment.user.username %> | 
    <a class="vote" href="/vote/<%=eachcomment.id%>">vote-up! </a>     
  
  <div class="ajaxvotes" data-value="<%=eachcomment.id%>"><%= eachcomment.rainbows.first.try(:comment_vote) %> votes</div> 

    <% end %>
</li>
</ul>

<center><p>Post Comment Below!</p>
<form action="/create_comment/<%= @post.id %>" method="POST">
<textarea name="content" rows="10" cols="50"></textarea>
<p><br></p> 
<input type="submit" value="submit">
</center>
<p><br></p>
<a href="/">Home</a>
